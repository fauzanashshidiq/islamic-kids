<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/Depth Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_orange_shadow"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <!-- Main Face Layer -->
    <item android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/card_orange_light"
                android:endColor="@color/card_orange_dark"
                android:angle="270"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>