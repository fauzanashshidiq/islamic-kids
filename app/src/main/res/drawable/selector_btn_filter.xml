<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- KEADAAN 1: DIPILIH (Warna Cerah + Border Tebal) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Warna Orange Cerah -->
            <corners android:radius="24dp"/>
            <stroke android:width="3dp" android:color="#FFFFFF"/> <!-- Border Putih -->
        </shape>
    </item>

    <!-- KEADAAN 2: TIDAK DIPILIH (Warna Pudar/Abu) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Abu-abu muda -->
            <corners android:radius="24dp"/>
            <stroke android:width="0dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
