<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doa_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_header_purple"
            android:backgroundTint="#7B1FA2"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/tvTitleDoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_header_purple"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:text="Tambah List Doa"
            android:fontFamily="@font/baloo_bold"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:elevation="4dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoaApi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            tools:listitem="@layout/item_api_doa_checkbox"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layoutErrorState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_error_internet"
                android:layout_marginBottom="16dp"
                android:alpha="0.9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yah, Internetnya Mati..."
                android:fontFamily="@font/baloo_bold"
                android:textSize="24sp"
                android:textColor="#333333"
                android:shadowColor="#40FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Coba nyalakan wifi atau datanya dulu,\nlalu tekan tombol di bawah ya!"
                android:fontFamily="@font/baloo_bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingBottom="12dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_item_capsule"
                    android:backgroundTint="#EF6C00"
                    android:translationY="4dp"
                    app:layout_constraintTop_toTopOf="@id/btnTryAgain"
                    app:layout_constraintBottom_toBottomOf="@id/btnTryAgain"
                    app:layout_constraintStart_toStartOf="@id/btnTryAgain"
                    app:layout_constraintEnd_toEndOf="@id/btnTryAgain"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTryAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coba Lagi yaa..."
                    android:fontFamily="@font/baloo_bold"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    app:cornerRadius="50dp"
                    app:backgroundTint="#FF9800"
                    app:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>