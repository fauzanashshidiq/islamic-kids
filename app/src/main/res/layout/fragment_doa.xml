<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doa_root"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <!-- Header Kapsul Ungu -->
    <TextView
        android:id="@+id/tvTitleDoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_purple"
        android:paddingVertical="12dp"
        android:gravity="center"
        android:text="Tambah List Doa"
        android:fontFamily="@font/baloo_bold"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDoaApi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp"/> <!-- Padding bawah agar tidak ketutup nav bar -->

</LinearLayout>
