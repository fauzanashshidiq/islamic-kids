<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kisah_nabi">

    <!-- TOMBOL BACK -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_circle_badge"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- JUDUL HEADER (Opsional, agar user tau ini halaman apa) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Kisah Nabi"
        android:fontFamily="@font/baloo_bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_orange"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- KONTEN SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp">

            <!-- BAGIAN 1: INFO NABI (GAYA 3D WARNA-WARNI) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingBottom="10dp">

                <!-- Layer Shadow (Bayangan) -->
                <View
                    android:id="@+id/viewHeaderShadow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_item_capsule"
                    android:backgroundTint="#33000000"
                    android:translationY="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layoutHeaderMain"
                    app:layout_constraintEnd_toEndOf="@id/layoutHeaderMain"
                    app:layout_constraintStart_toStartOf="@id/layoutHeaderMain"
                    app:layout_constraintTop_toTopOf="@id/layoutHeaderMain" />

                <!-- Layer Utama (Warna akan di-set di Kotlin) -->
                <LinearLayout
                    android:id="@+id/layoutHeaderMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_capsule"
                    android:backgroundTint="@color/black"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvDetailNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="Nabi Adam AS"
                        android:fontFamily="@font/baloo_bold"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>

                    <!-- Info Baris (Usia, Tempat, Tahun) -->
                    <!-- Background putih transparan agar teks terbaca di warna apapun -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_item_capsule"
                        android:backgroundTint="#33FFFFFF"
                        android:padding="12dp"
                        android:weightSum="3">

                        <!-- Usia -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usia"
                                android:textColor="#EEEEEE"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tvUsia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="950 Thn"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/baloo_bold"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Tempat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tempat"
                                android:textColor="#EEEEEE"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tvTempat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Arab"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/baloo_bold"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Tahun -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tahun"
                                android:textColor="#EEEEEE"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tvTahun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5876 SM"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/baloo_bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- BAGIAN 2: KISAH PERJUANGAN (GAYA 3D PUTIH) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingBottom="10dp">

                <!-- Shadow (Bayangan Bawah) -->
                <View
                    android:id="@+id/viewContentShadow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_item_capsule"
                    android:backgroundTint="#FFD0D0D0"
                    android:translationY="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/layoutContentMain"
                    app:layout_constraintEnd_toEndOf="@id/layoutContentMain"
                    app:layout_constraintStart_toStartOf="@id/layoutContentMain"
                    app:layout_constraintTop_toTopOf="@id/layoutContentMain" />

                <!-- Main Content Putih -->
                <LinearLayout
                    android:id="@+id/layoutContentMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_item_capsule"
                    android:backgroundTint="#FFFFFF"
                    android:padding="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Kisah Perjuangan"
                        android:fontFamily="@font/baloo_bold"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <!-- PERBAIKAN TEKS DESKRIPSI -->
                    <TextView
                        android:id="@+id/tvDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum..."
                        android:fontFamily="sans-serif-rounded"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:lineSpacingMultiplier="1.5"
                        android:gravity="start"
                        tools:text="Nabi Adam AS adalah manusia pertama yang diciptakan Allah SWT. Beliau diciptakan dari tanah liat kering yang berasal dari lumpur hitam. Setelah roh ditiupkan ke dalamnya, Allah memerintahkan para malaikat untuk bersujud kepada Adam sebagai bentuk penghormatan." />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
