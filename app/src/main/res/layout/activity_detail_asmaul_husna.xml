<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgasmaulhusna"
    tools:context=".DetailAsmaulHusnaActivity">

    <!-- =========== HEADER JUDUL =========== -->

    <!-- 1. Layer Shadow (Header) -->
    <TextView
        android:id="@+id/tvHeaderShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"

        android:text="Asmaul Husna"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#00000000"

        android:background="@drawable/bg_header_orange"
        android:backgroundTint="#D32F2F"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Layer Utama (Header) -->
    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="Asmaul Husna"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_orange"
        android:backgroundTint="#EF5350"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"
        android:elevation="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/arrow"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <!-- Tombol Suara -->
    <ImageButton
        android:id="@+id/btnSuara"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/sound"
        app:tint="#81D4FA"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>


    <!-- =========== KARTU KONTEN UTAMA =========== -->

    <!-- Layer Shadow Kartu -->
    <View
        android:id="@+id/cardShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/bg_item_capsule"
        android:backgroundTint="#D32F2F"
        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layer Utama Kartu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"

        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#EF5350"

        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Teks Arab (Center) -->
            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الله"
                android:fontFamily="@font/scheherazadenew_semibold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="56sp"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Judul Materi (Latin) - di bawah Arab -->
            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allah"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:fontFamily="@font/baloo_bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginTop="8dp"

                app:layout_constraintTop_toBottomOf="@id/tvArabMateri"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Shadow untuk Kapsul Deskripsi -->
            <View
                android:id="@+id/deskripsiShadow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_rounded_beige"
                android:backgroundTint="#B71C1C" 
                android:translationY="4dp"
                app:layout_constraintTop_toTopOf="@+id/tvDeskripsiMateri"
                app:layout_constraintBottom_toBottomOf="@+id/tvDeskripsiMateri"
                app:layout_constraintStart_toStartOf="@+id/tvDeskripsiMateri"
                app:layout_constraintEnd_toEndOf="@+id/tvDeskripsiMateri"/>

            <!-- Kapsul Deskripsi (Footer) -->
            <TextView
                android:id="@+id/tvDeskripsiMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="16dp"

                android:background="@drawable/bg_rounded_beige"
                android:backgroundTint="#D32F2F"

                android:paddingVertical="14dp"
                android:paddingHorizontal="24dp"

                android:text="Maha Besar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="@font/baloo_bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Elemen Hidden (Agar tidak error jika dipanggil code) -->
            <ImageView
                android:id="@+id/ivMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/shadowDeskripsi"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nomor Urut (Floating Badge) - White with Red Text -->
    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:background="@drawable/bg_badge_number_red"
        android:gravity="center"

        android:fontFamily="@font/baloo_bold"
        android:textColor="#D32F2F"
        android:textSize="28sp"

        android:elevation="20dp"
        android:translationX="-20dp"
        android:translationY="-20dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <!-- Tombol Prev -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#D32F2F"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginEnd="-20dp" />

    <!-- Tombol Next -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#D32F2F"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintStart_toEndOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginStart="-20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>