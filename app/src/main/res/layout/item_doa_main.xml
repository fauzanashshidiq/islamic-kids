<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_input_border"
    android:padding="16dp"
    android:clipToPadding="false">

    <!-- Header: Judul & Checkbox Hapal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvJudulMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Judul Doa"
            android:fontFamily="@font/baloo_bold"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:shadowColor="#FFFFFF"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"/>

        <!-- Teks "Hapal" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapal"
            android:fontFamily="@font/baloo_bold"
            android:textSize="15sp"
            android:textColor="#4CAF50"
            android:layout_marginEnd="2dp"/>

        <!-- Checkbox Hapal -->
        <CheckBox
            android:id="@+id/cbHapal"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:button="@drawable/selector_checkbox_cartoon"
            android:background="@null"
            app:buttonTint="@null"
            android:buttonTint="@null" />

    </LinearLayout>

    <!-- Ayat Arab (Rata Kanan) -->
    <!-- textAlignment="viewEnd" dan gravity="end" memaksa teks ke kanan -->
    <TextView
        android:id="@+id/tvAyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:textDirection="rtl"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:fontFamily="@font/baloo_semibold"
        android:text="بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيم"/>

    <!-- Latin -->
    <TextView
        android:id="@+id/tvLatin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#555555"
        android:text="Latin"
        android:textStyle="italic"
        android:fontFamily="@font/baloo_reguler"
        android:layout_marginBottom="8dp"/>

    <!-- Arti -->
    <TextView
        android:id="@+id/tvArtiMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terjemahan"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/baloo_reguler"/>

    <!-- Catatan -->
    <LinearLayout
        android:id="@+id/layoutCatatanItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF3E0"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#FF9800"/>

        <TextView
            android:id="@+id/tvCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan kamu..."
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/baloo_semibold"
            android:textColor="#E65100"/>
    </LinearLayout>

</LinearLayout>
