<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA"
    android:padding="16dp"
    tools:context=".DetailRukunIslamActivity">

    <!-- Header Judul -->
    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Rukun Islam"
        android:fontFamily="@font/baloo_bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_orange"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow"
        android:background="@drawable/bg_circle_badge"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <!-- Tombol Suara -->
    <ImageButton
        android:id="@+id/btnSuara"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/sound"
        android:background="@drawable/bg_circle_badge"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <!-- KARTU KONTEN UTAMA -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"

        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#3F51B5"

        app:layout_constraintDimensionRatio="H,3:4.8"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Background Lingkaran Glow -->
            <View
                android:id="@+id/bg_glow"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_circle_badge"
                android:backgroundTint="#FFF3E0"

                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/tvArabMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Gambar Materi -->
            <ImageView
                android:id="@+id/ivMateri"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintBottom_toBottomOf="@id/bg_glow"
                app:layout_constraintEnd_toEndOf="@id/bg_glow"
                app:layout_constraintStart_toStartOf="@id/bg_glow"
                app:layout_constraintTop_toTopOf="@id/bg_glow" />

            <!-- Teks Arab -->
            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Arab"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toTopOf="@id/tvJudulMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_glow" />

            <!-- Judul Materi -->
            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:text="Judul"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/baloo_bold"

                app:layout_constraintBottom_toTopOf="@id/tvDeskripsiMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvArabMateri" />

            <!-- Deskripsi Singkat -->
            <TextView
                android:id="@+id/tvDeskripsiMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"

                android:text="Deskripsi"
                android:background="@drawable/bg_pill_beige"
                android:fontFamily="@font/baloo_bold"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:textColor="#5D4037"
                android:textSize="16sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJudulMateri" />

            <!-- Keterangan (Hidden by default based on UI) -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvDeskripsiMateri"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"/>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nomor Urut -->
    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@drawable/bg_circle_badge"
        android:gravity="center"
        android:text="1"

        android:fontFamily="@font/baloo_bold"
        android:textColor="#F57C00"
        android:textSize="28sp"

        android:elevation="12dp"
        android:translationX="-15dp"
        android:translationY="-15dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <!-- Tombol Prev -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_badge"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginEnd="-12dp" />

    <!-- Tombol Next -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_badge"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"

        app:layout_constraintStart_toEndOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginStart="-12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
