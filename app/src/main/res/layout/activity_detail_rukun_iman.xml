<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrukuniman"
    tools:context=".DetailRukunImanActivity">

    <!-- =========== HEADER JUDUL DENGAN SHADOW/EFFECT 3D =========== -->

    <!-- 1. Layer Shadow (Header) -->
    <TextView
        android:id="@+id/tvHeaderShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"

        android:text="Rukun Iman"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#00000000"

        android:background="@drawable/bg_header_orange"
        android:backgroundTint="#CC7A00"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Layer Utama (Header) -->
    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="Rukun Iman"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_orange"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"
        android:elevation="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/arrow"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <!-- CONTAINER TOMBOL SUARA & PROGRESS -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBtnSuara"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori">

        <!-- LAYER 1: Background Putih -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_white_solid" />

        <!-- LAYER 2: Progress Bar Model PIE (ORANYE) -->
        <!-- progressDrawable diarahkan ke circular_progress_drawable_orange -->
        <ProgressBar
            android:id="@+id/progressSuara"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress_drawable_orange"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- LAYER 3: Tombol Ikon -->
        <ImageButton
            android:id="@+id/btnSuara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sound"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- =========== KARTU KONTEN UTAMA DENGAN EFEK 3D =========== -->

    <!-- Layer Shadow Kartu -->
    <View
        android:id="@+id/cardShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/bg_item_capsule"
        android:backgroundTint="#B3621B"
        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layer Utama Kartu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"

        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E68A36"

        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Background Lingkaran Glow -->
            <View
                android:id="@+id/bg_glow"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_circle_white_solid"
                android:alpha="0.2"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Gambar Materi -->
            <ImageView
                android:id="@+id/ivMateri"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_iman_malaikat"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/bg_glow"
                app:layout_constraintEnd_toEndOf="@id/bg_glow"
                app:layout_constraintStart_toStartOf="@id/bg_glow"
                app:layout_constraintTop_toTopOf="@id/bg_glow" />

            <!-- Teks Arab (Hidden) -->
            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Judul Materi -->
            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"

                android:text="Iman Kepada\nKitab-Kitab Allah"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/baloo_bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_glow" />

            <!-- SHADOW untuk Area Deskripsi (Effect 3D) -->
            <View
                android:id="@+id/shadowDeskripsi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_rounded_beige"
                android:backgroundTint="#C78938"
                android:translationY="6dp"

                app:layout_constraintTop_toTopOf="@id/layoutDeskripsi"
                app:layout_constraintBottom_toBottomOf="@id/layoutDeskripsi"
                app:layout_constraintStart_toStartOf="@id/layoutDeskripsi"
                app:layout_constraintEnd_toEndOf="@id/layoutDeskripsi"/>

            <!-- Area Deskripsi (Rounded Box) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_beige"
                android:paddingBottom="8dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJudulMateri"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/tvDeskripsiMateri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"

                    android:text="Meyakini bahwa Allah menurunkan kitab-kitab suci kepada para Rasul sebagai pedoman hidup manusia."
                    android:textAlignment="center"
                    android:textColor="#5D4037"
                    android:textSize="16sp"
                    android:fontFamily="@font/baloo_bold"
                    android:lineSpacingExtra="4dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Hidden Keterangan -->
                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvDeskripsiMateri"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nomor Urut (Floating Badge) -->
    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:background="@drawable/bg_badge_number"
        android:gravity="center"

        android:fontFamily="@font/baloo_bold"
        android:textColor="#F57C00"
        android:textSize="28sp"

        android:elevation="20dp"
        android:translationX="-20dp"
        android:translationY="-20dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <!-- Tombol Prev -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#F57C00"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginEnd="-20dp" />

    <!-- Tombol Next -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#F57C00"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintStart_toEndOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginStart="-20dp" />

    <!-- Layout Dots Indicator -->
    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>