<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrukuniman"
    tools:context=".DetailRukunIslamActivity">

    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Rukun Islam"
        android:fontFamily="@font/baloo_bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_header_blue"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_white"
        android:elevation="6dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"/>

    <ImageButton
        android:id="@+id/btnSuara"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/icon_lock"
        android:background="@drawable/bg_circle_white"
        android:elevation="6dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="100dp"

        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FF7B15"

        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="H,3:4.2"

        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <View
                android:id="@+id/bg_glow"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintBottom_toTopOf="@id/tvArabMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/ivMateri"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintBottom_toBottomOf="@id/bg_glow"
                app:layout_constraintEnd_toEndOf="@id/bg_glow"
                app:layout_constraintStart_toStartOf="@id/bg_glow"
                app:layout_constraintTop_toTopOf="@id/bg_glow" />

            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Arab"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tvJudulMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_glow" />

            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/baloo_bold"
                android:lineSpacingExtra="-2dp"
                android:text="Judul Materi"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/tvDeskripsiMateri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvArabMateri" />

            <TextView
                android:id="@+id/tvDeskripsiMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_pill_blue_light"
                android:fontFamily="@font/baloo_bold"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJudulMateri" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDeskripsiMateri">

                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF" />
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_badge_blue"
        android:gravity="center"
        android:text="1"
        android:fontFamily="@font/baloo_bold"
        android:textColor="#FF7B15"
        android:textSize="22sp"

        android:elevation="15dp"
        android:translationX="-10dp"
        android:translationY="-10dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_circle_white"
        android:elevation="15dp"
        android:padding="10dp"

        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_left"

        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardContent" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circle_white"
        android:elevation="15dp"
        android:padding="10dp"

        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_right"

        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardContent" />

</androidx.constraintlayout.widget.ConstraintLayout>