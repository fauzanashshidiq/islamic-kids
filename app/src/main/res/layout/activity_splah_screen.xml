<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsplashscreen1"
    tools:context=".SplahScreen">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/img_hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:adjustViewBounds="true"
        android:src="@drawable/iconlogo"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISLAMICKIDS"

            android:fontFamily="@font/baloo_bold"
            android:textSize="36sp"
            android:textColor="#F2994A"
            android:letterSpacing="0.02"

            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERIAL BELAJAR ISLAM"

            android:fontFamily="@font/baloo_bold"
            android:textSize="22sp"
            android:textColor="#F2994A"
            android:textAlignment="center"

            android:layout_marginTop="-5dp"
            android:includeFontPadding="false" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
