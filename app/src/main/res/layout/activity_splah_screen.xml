<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsplashscreen"
    tools:context=".SplahScreen">

    <ImageView
        android:id="@+id/img_hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logoislamic"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.6" />

    <com.pam.uas.ui.custom.StrokeTextView
        android:id="@+id/tv_title"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"

        android:fontFamily="@font/fredoka_bold"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="25"
        android:text="ISLAMICKIDS"
        android:textAllCaps="true"
        android:textColor="#FB923C"

        android:textSize="44sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_hero" />

    <com.pam.uas.ui.custom.StrokeTextView
        android:id="@+id/tv_subtitle"
        android:layout_width="261dp"
        android:layout_height="30dp"
        android:textAlignment="center"

        android:fontFamily="@font/fredoka_bold"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="15"
        android:text="SERIAL BELAJAR ISLAM"
        android:textAllCaps="true"
        android:textColor="#FB923C"

        android:textSize="23sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
