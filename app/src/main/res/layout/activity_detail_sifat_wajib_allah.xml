<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsifatwajib"
    tools:context=".DetailSifatWajibAllahActivity">

    <TextView
        android:id="@+id/tvHeaderShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"

        android:text="Sifat Wajib Allah"
        android:fontFamily="@font/baloo_bold"
        android:textSize="18sp"
        android:textColor="#00000000"

        android:background="@drawable/bg_header_orange"
        android:backgroundTint="#1F7A55"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="Sifat Wajib Allah"
        android:fontFamily="@font/baloo_bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_orange"
        android:backgroundTint="#34D399"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"
        android:elevation="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/arrow"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBtnSuara"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_white_solid" />

        <ProgressBar
            android:id="@+id/progressSuara"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress_drawable_green"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnSuara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sound"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/cardShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/bg_item_capsule"
        android:backgroundTint="#1F7A55"
        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"

        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#34D399"

        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="وجود"
                android:fontFamily="@font/scheherazadenew_semibold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wujud"
                android:textAlignment="center"
                android:textColor="#F8F8F0"
                android:textSize="24sp"
                android:fontFamily="@font/baloo_bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginTop="8dp"

                app:layout_constraintTop_toBottomOf="@id/tvArabMateri"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/deskripsiShadow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_rounded_beige"
                android:backgroundTint="#166534" 
                android:translationY="4dp"
                app:layout_constraintTop_toTopOf="@+id/tvDeskripsiMateri"
                app:layout_constraintBottom_toBottomOf="@+id/tvDeskripsiMateri"
                app:layout_constraintStart_toStartOf="@+id/tvDeskripsiMateri"
                app:layout_constraintEnd_toEndOf="@+id/tvDeskripsiMateri"/>

            <TextView
                android:id="@+id/tvDeskripsiMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="16dp"

                android:background="@drawable/bg_rounded_beige"
                android:backgroundTint="#1F7A55"

                android:paddingVertical="14dp"
                android:paddingHorizontal="24dp"

                android:text="artinya ada"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="@font/baloo_bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/ivMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/shadowDeskripsi"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:background="@drawable/bg_badge_number_green"
        android:gravity="center"

        android:fontFamily="@font/baloo_bold"
        android:textColor="#1F7A55"
        android:textSize="28sp"

        android:elevation="20dp"
        android:translationX="-20dp"
        android:translationY="-20dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#1F7A55"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginEnd="-20dp" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#1F7A55"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintStart_toEndOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginStart="-20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>