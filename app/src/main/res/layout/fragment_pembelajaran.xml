<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="32dp"
    android:clipToPadding="false"
    android:background="@drawable/bgpembelajaran">

    <!-- Header "Ruang Pembelajaran" -->
    <TextView
        android:id="@+id/tvHeaderPembelajaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruang Pembelajaran"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_header_learning_3d"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPembelajaranMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderPembelajaran"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>