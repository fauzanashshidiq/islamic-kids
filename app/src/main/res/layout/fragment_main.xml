<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:clipToPadding="false">

    <!-- Header Judul -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doa Harian Kamu"
        android:fontFamily="@font/baloo_bold"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"/>

    <!-- Filter Buttons (Gaya Kapsul Warna-warni) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:chipSpacingHorizontal="12dp"> <!-- Jarak antar tombol -->

            <!-- Chip SEMUA -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSemua"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Semua"
                android:checked="true"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg_blue"
                android:fontFamily="@font/baloo_bold"
                android:textSize="16sp"
                app:chipCornerRadius="25dp"/>

            <!-- Chip SUDAH HAPAL -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSudahHapal"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Sudah Hapal"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg_green"
                android:fontFamily="@font/baloo_bold"
                android:textSize="16sp"
                app:chipCornerRadius="25dp"/>

            <!-- Chip BELUM HAPAL -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipBelumHapal"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Belum Hapal"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg_orange"
                android:fontFamily="@font/baloo_bold"
                android:textSize="16sp"
                app:chipCornerRadius="25dp"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Container Utama: RecyclerView & Empty State -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView List Doa -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoaMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:clipToPadding="false"/>

        <!-- VIEW KOSONG (Empty State) -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="50dp">

            <!-- Gambar Ikon Lucu (Pakai yg ada atau ic_launcher) -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:alpha="0.8"/>

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Ada Doa"
                android:fontFamily="@font/baloo_bold"
                android:textSize="22sp"
                android:textColor="#333333"
                android:layout_marginTop="16dp"/>

            <!-- Deskripsi -->
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Yuk, tambah doa harianmu dulu di menu Tambah Doa!"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>