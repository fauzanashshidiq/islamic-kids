<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:clipToPadding="false">

    <!-- Header Judul -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doa Harian Kamu"
        android:fontFamily="@font/baloo_bold"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"/>

    <!-- Filter Buttons: Desain Kartun Centered -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"

        android:clipToPadding="false"
        android:clipChildren="false"

        android:paddingVertical="8dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:id="@+id/containerFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"

            android:clipToPadding="false"
            android:clipChildren="false"

            android:paddingHorizontal="8dp">

            <!-- Tombol 1: SEMUA -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterSemua"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Semua"
                android:background="@drawable/selector_btn_filter"
                android:textColor="#333333"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"/>

            <!-- Tombol 2: SUDAH HAPAL -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterSudah"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Sudah Hapal"
                android:background="@drawable/selector_btn_filter"
                android:textColor="#333333"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"/>

            <!-- Tombol 3: BELUM HAPAL -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterBelum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Belum Hapal"
                android:background="@drawable/selector_btn_filter"
                android:textColor="#333333"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:elevation="2dp"/>

        </LinearLayout>
    </HorizontalScrollView>


    <!-- Container Utama: RecyclerView & Empty State -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView List Doa -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoaMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:clipToPadding="false"/>

        <!-- VIEW KOSONG (Empty State) -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="50dp">

            <!-- Gambar Ikon Lucu (Pakai yg ada atau ic_launcher) -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:alpha="0.8"/>

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Ada Doa"
                android:fontFamily="@font/baloo_bold"
                android:textSize="22sp"
                android:textColor="#333333"
                android:layout_marginTop="16dp"/>

            <!-- Deskripsi -->
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Yuk, tambah doa harianmu dulu di menu Tambah Doa!"
                android:fontFamily="@font/baloo_bold"
                android:textSize="15sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>