<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="32dp">

    <!-- Header Judul dengan Style 3D Card (Sama seperti Pembelajaran/Kisah Nabi) -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="Doa Harian Kamu"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/baloo_bold"
        android:textStyle="bold"

        android:background="@drawable/bg_header_orange"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter Buttons: Desain Kartun Centered -->
    <HorizontalScrollView
        android:id="@+id/svFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingVertical="8dp"
        android:paddingHorizontal="10dp"
        
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingHorizontal="8dp">

            <!-- Tombol 1: SEMUA (Biru) - Ukuran Diperkecil Sedikit -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterSemua"
                android:layout_width="wrap_content"
                android:layout_height="56dp" 
                android:text="Semua"
                android:background="@drawable/selector_btn_blue"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"/>

            <!-- Tombol 2: SUDAH HAPAL (Hijau) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterSudah"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Sudah Hapal"
                android:background="@drawable/selector_btn_green"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"/>

            <!-- Tombol 3: BELUM HAPAL (Kuning/Orange) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterBelum"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Belum Hapal"
                android:background="@drawable/selector_btn_red"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo_bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:elevation="4dp"/>

        </LinearLayout>
    </HorizontalScrollView>


    <!-- RecyclerView List Doa -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDoaMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:paddingHorizontal="16dp"
        
        app:layout_constraintTop_toBottomOf="@id/svFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- VIEW KOSONG (Empty State) -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="110dp"
        
        app:layout_constraintTop_toBottomOf="@id/svFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gambar Ikon Lucu (Kaca Pembesar) -->
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_search_preview"
            android:alpha="0.9"/>

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wah, List Doanya Masih Kosong!"
            android:fontFamily="@font/baloo_bold"
            android:textSize="24sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:shadowColor="#40FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Deskripsi -->
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Yuk, minta Ayah atau Bunda\nuntuk tambah doa baru di sini.\nSemangat ya!"
            android:fontFamily="@font/baloo_bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>