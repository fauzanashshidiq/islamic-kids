<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- BARIS 1: Checkbox & Judul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTitleApiDoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Judul Doa"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- BARIS 2: Input Catatan (Default GONE/Tersembunyi) -->
    <LinearLayout
        android:id="@+id/layoutCatatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingStart="32dp"
        android:paddingTop="4dp">

        <EditText
            android:id="@+id/etCatatan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tulis catatan di sini..."
            android:textSize="14sp"
            android:background="@android:drawable/edit_text"
            android:inputType="textCapSentences"/>

        <Button
            android:id="@+id/btnSimpanCatatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textSize="12sp"
            android:minHeight="40dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
