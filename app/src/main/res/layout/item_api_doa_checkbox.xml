<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFF8E1">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSelect"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:button="@drawable/selector_checkbox_cartoon"
                android:background="@null"
                android:layout_marginEnd="12dp"
                app:buttonTint="@null"
                android:buttonTint="@null" />

            <TextView
                android:id="@+id/tvTitleApiDoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Judul Doa"
                android:fontFamily="@font/baloo_bold"
                android:textSize="20sp"
                android:textColor="#5E35B1"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_purple_light"
            android:padding="12dp">

            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tulis catatan di sini..."
                android:textColorHint="#9575CD"
                android:textSize="14sp"
                android:fontFamily="@font/baloo_semibold"
                android:textColor="#4A148C"
                android:background="@null"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="2"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSimpanCatatan"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="Simpan Catatan"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/baloo_bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_simpan"
                android:paddingHorizontal="20dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>