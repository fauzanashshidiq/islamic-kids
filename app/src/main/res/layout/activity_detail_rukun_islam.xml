<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrukunislam"
    tools:context=".DetailRukunIslamActivity">

    <!-- =========== HEADER JUDUL DENGAN SHADOW/EFFECT 3D =========== -->

    <!-- 1. Layer Shadow (Header) -->
    <TextView
        android:id="@+id/tvHeaderShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"

        android:text="Rukun Islam"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#00000000"

        android:background="@drawable/bg_header_blue_gradient"
        android:backgroundTint="#0011FF"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Layer Utama (Header) -->
    <TextView
        android:id="@+id/tvHeaderKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="Rukun Islam"
        android:fontFamily="@font/baloo_bold"
        android:textSize="22sp"
        android:textColor="#FFFFFF"

        android:background="@drawable/bg_header_blue_gradient"
        android:paddingHorizontal="48dp"
        android:paddingVertical="10dp"
        android:elevation="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/arrow"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>

    <!-- Tombol Suara -->
    <ImageButton
        android:id="@+id/btnSuara"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/sound"
        android:background="@drawable/bg_circle_white_solid"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintTop_toTopOf="@id/tvHeaderKategori"/>


    <!-- =========== KARTU KONTEN UTAMA DENGAN EFEK 3D =========== -->

    <!-- Layer Shadow Kartu -->
    <View
        android:id="@+id/cardShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/bg_item_capsule"
        android:backgroundTint="#0011FF"
        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layer Utama Kartu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"

        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#00B2FF"

        app:layout_constraintDimensionRatio="H,3:5.0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderKategori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Container Gambar (CardView for Rounded Corners) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvImageWrapper"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Gambar Materi -->
                <ImageView
                    android:id="@+id/ivMateri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_iman_malaikat"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <!-- Teks Arab (Hidden) -->
            <TextView
                android:id="@+id/tvArabMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Judul Materi -->
            <TextView
                android:id="@+id/tvJudulMateri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"

                android:text="Membaca Syahadat"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/baloo_bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvImageWrapper" />

            <!-- SHADOW untuk Area Deskripsi (Effect 3D) -->
            <View
                android:id="@+id/shadowDeskripsi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_rounded_blue_light"
                android:backgroundTint="#0011FF"
                android:translationY="6dp"

                app:layout_constraintTop_toTopOf="@id/layoutDeskripsi"
                app:layout_constraintBottom_toBottomOf="@id/layoutDeskripsi"
                app:layout_constraintStart_toStartOf="@id/layoutDeskripsi"
                app:layout_constraintEnd_toEndOf="@id/layoutDeskripsi"/>

            <!-- Area Deskripsi (Rounded Box) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_blue_light"
                android:paddingBottom="8dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJudulMateri"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/tvDeskripsiMateri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"

                    android:text="Mengucapkan dua kalimat syahadat sebagai persaksian tiada Tuhan selain Allah dan Muhammad utusan Allah."
                    android:textAlignment="center"
                    android:textColor="#01579B"
                    android:textSize="16sp"
                    android:fontFamily="@font/baloo_bold"
                    android:lineSpacingExtra="4dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Hidden Keterangan -->
                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvDeskripsiMateri"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nomor Urut (Floating Badge) -->
    <TextView
        android:id="@+id/tvNomorUrut"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:background="@drawable/bg_badge_number_blue"
        android:gravity="center"
        android:text="1"

        android:fontFamily="@font/baloo_bold"
        android:textColor="#00B2FF"
        android:textSize="28sp"

        android:elevation="20dp"
        android:translationX="-20dp"
        android:translationY="-20dp"

        app:layout_constraintStart_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"/>

    <!-- Tombol Prev -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#00B2FF"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintEnd_toStartOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginEnd="-20dp" />

    <!-- Tombol Next -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/bg_circle_white_solid"
        app:tint="#00B2FF"
        android:elevation="12dp"
        android:padding="16dp"
        android:scaleType="fitCenter"

        app:layout_constraintStart_toEndOf="@id/cardContent"
        app:layout_constraintTop_toTopOf="@id/cardContent"
        app:layout_constraintBottom_toBottomOf="@id/cardContent"
        android:layout_marginStart="-20dp" />

    <!-- Layout Dots Indicator -->
    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>